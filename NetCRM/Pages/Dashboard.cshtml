@page
@model NetCRM.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Hoş Geldin, @Model.Username</h3>

                    <div class="alert alert-info text-center">
                        Rolün: <strong>@Model.Role</strong>
                    </div>

                    <div class="text-center mt-4">
                        <a href="/Customers/Index" class="btn btn-success btn-lg">Go to Customer List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
