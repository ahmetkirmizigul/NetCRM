@page "{id:int}"
@model NetCRM.Pages.Customers.EditModel
@{
    ViewData["Title"] = "Edit Customer";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Edit Customer</h3>

                    @if (Model.ErrorMessage != null)
                    {
                        <div class="alert alert-danger">@Model.ErrorMessage</div>
                    }

                    @if (Model.SuccessMessage != null)
                    {
                        <div class="alert alert-success">@Model.SuccessMessage</div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">First Name</label>
                            <input asp-for="Customer.FirstName" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Last Name</label>
                            <input asp-for="Customer.LastName" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input asp-for="Customer.Email" type="email" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Region</label>
                            <input asp-for="Customer.Region" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Registration Date</label>
                            <input asp-for="Customer.RegistrationDate" type="date" class="form-control" />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning">Update Customer</button>
                        </div>
                    </form>

                    <div class="mt-3 text-center">
                        <a href="/Customers/Index" class="btn btn-outline-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
