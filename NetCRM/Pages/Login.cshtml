@page
@model NetCRM.Pages.LoginModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Giriş Yap</h3>

                    @if (Model.ErrorMessage != null)
                    {
                        <div class="alert alert-danger">@Model.ErrorMessage</div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label for="Username" class="form-label">Kullanıcı Adı</label>
                            <input asp-for="LoginRequest.Username" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="Password" class="form-label">Şifre</label>
                            <input asp-for="LoginRequest.Password" class="form-control" type="password" />
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Giriş Yap</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
